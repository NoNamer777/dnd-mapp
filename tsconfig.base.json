{
    "compileOnSave": false,
    "exclude": ["node_modules", "tmp"],
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["ES2021", "DOM"],
        "module": "ES2022",
        "moduleResolution": "node",
        "paths": {},
        "rootDir": ".",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "target": "ES2022"
    }
}
