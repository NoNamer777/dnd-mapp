{
    "compileOnSave": false,
    "exclude": ["node_modules", "tmp"],
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["ES2022", "DOM"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "paths": {
            "@dnd-mapp/data": ["projects/data/src/index.ts"],
            "@dnd-mapp/data/testing": ["projects/data/testing/index.ts"],
            "@dnd-mapp/shared-components": ["projects/shared-components/src/index.ts"],
            "@dnd-mapp/shared-components/testing": ["projects/shared-components/src/testing/index.ts"]
        },
        "rootDir": ".",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "target": "ES2022"
    }
}
