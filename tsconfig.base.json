{
    "compileOnSave": false,
    "exclude": ["node_modules", "tmp"],
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["es2021", "DOM"],
        "module": "es2022",
        "moduleResolution": "node",
        "paths": {
            "@dnd-mapp/data": ["packages/data/src/index.ts"],
            "@dnd-mapp/data/testing": ["packages/data/testing/index.ts"]
        },
        "rootDir": ".",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "target": "es2022"
    }
}
