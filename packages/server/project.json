{
    "name": "server",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/server/src",
    "projectType": "application",
    "tags": ["@dnd-mapp/server"],
    "implicitDependencies": ["data"],
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "assets": ["packages/server/src/assets"],
                "baseHref": "/",
                "buildLibsFromSource": false,
                "compiler": "tsc",
                "externalDependencies": [
                    "@dnd-mapp/data",
                    "@nestjs/common",
                    "@nestjs/config",
                    "@nestjs/core",
                    "@nestjs/jwt",
                    "@nestjs/mapped-types",
                    "@nestjs/platform-express",
                    "@nestjs/serve-static",
                    "@nestjs/typeorm",
                    "bcrypt",
                    "class-transformer",
                    "class-validator",
                    "express",
                    "helmet",
                    "nanoid",
                    "reflect-metadata",
                    "rxjs",
                    "tslib",
                    "typeorm"
                ],
                "extractLicenses": true,
                "inspect": false,
                "isolatedConfig": true,
                "main": "packages/server/src/main.ts",
                "outputPath": "dist/server",
                "scripts": [],
                "styles": [],
                "target": "node",
                "tsConfig": "packages/server/tsconfig.app.json",
                "vendor": true,
                "webpackConfig": "packages/server/webpack.config.js"
            },
            "configurations": {
                "ci": {
                    "memoryLimit": 1024,
                    "namedChunks": false,
                    "optimization": true,
                    "sourceMap": false
                },
                "dev": {
                    "namedChunks": true,
                    "optimization": false,
                    "sourceMap": true,
                    "watch": true
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "options": {
                "buildTarget": "server:build",
                "host": "0.0.0.0",
                "inspect": false,
                "port": 8080
            }
        },
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    {
                        "command": "npx nx build client -c dev",
                        "prefix": "[front-end]:\t"
                    },
                    {
                        "command": "npx nx build data -c dev",
                        "prefix": "[data]:\t\t"
                    },
                    {
                        "command": "npx nx serve server",
                        "prefix": "[back-end]:\t"
                    }
                ],
                "envFile": "packages/server/.env",
                "color": true
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{options.coverageDirectory}"],
            "options": {
                "codeCoverage": true,
                "colors": true,
                "coverageReporters": ["html", "text-summary"],
                "coverageDirectory": "coverage/server",
                "jestConfig": "packages/server/jest.config.ts",
                "onlyChanged": false,
                "passWithNoTests": true,
                "testPathIgnorePatterns": ["./src/test.ts"],
                "watch": false,
                "watchAll": false
            },
            "configurations": {
                "ci": {
                    "ci": true
                },
                "dev": {
                    "watchAll": true
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/server/**/*.ts"]
            }
        }
    }
}
