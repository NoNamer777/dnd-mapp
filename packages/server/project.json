{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "server",
    "sourceRoot": "packages/server/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "assets": ["packages/server/src/assets"],
                "baseHref": "/",
                "compiler": "tsc",
                "extractLicenses": true,
                "inspect": false,
                "isolatedConfig": true,
                "main": "packages/server/src/main.ts",
                "memoryLimit": 2048,
                "namedChunks": false,
                "optimization": true,
                "outputPath": "dist/server",
                "scripts": [],
                "sourceMap": true,
                "styles": [],
                "target": "node",
                "tsConfig": "packages/server/tsconfig.app.json",
                "watch": false
            },
            "configurations": {
                "ci": {
                    "memoryLimit": 1024,
                    "sourceMap": false
                }
            }
        },
        "serve": {
            "executor": "@nrwl/js:node",
            "options": {
                "buildTarget": "server:build",
                "host": "0.0.0.0",
                "inspect": false,
                "port": 8080
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{options.coverageDirectory}"],
            "options": {
                "codeCoverage": true,
                "colors": true,
                "coverageReporters": ["html", "text-summary"],
                "coverageDirectory": "../../coverage/server",
                "jestConfig": "packages/server/jest.config.ts",
                "onlyChanged": false,
                "passWithNoTests": true,
                "watch": false,
                "watchAll": false
            },
            "configurations": {
                "ci": {
                    "ci": true
                }
            }
        },
        "docker-build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker build -f packages/server/Dockerfile . -t dnd-mapp/server"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/server/**/*.ts"]
            }
        }
    },
    "tags": ["@dnd-mapp/server"]
}
