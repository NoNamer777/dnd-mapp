{
    "name": "server",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/server/src",
    "projectType": "application",
    "tags": ["@dnd-mapp/server"],
    "implicitDependencies": ["data"],
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "assets": ["packages/server/src/assets"],
                "baseHref": "/",
                "compiler": "tsc",
                "extractLicenses": true,
                "generatePackageJson": true,
                "inspect": false,
                "isolatedConfig": true,
                "main": "packages/server/src/main.ts",
                "memoryLimit": 2048,
                "namedChunks": false,
                "optimization": true,
                "outputPath": "dist/server",
                "scripts": [],
                "sourceMap": true,
                "styles": [],
                "target": "node",
                "tsConfig": "packages/server/tsconfig.app.json",
                "watch": false,
                "webpackConfig": "packages/server/webpack.config.js"
            },
            "configurations": {
                "ci": {
                    "memoryLimit": 1024,
                    "sourceMap": false
                },
                "dev": {
                    "watch": true
                }
            }
        },
        "run-migrations": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npx typeorm-ts-node-esm migration:run -d packages/server/typeorm/config.dev.ts",
                "parallel": false
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "options": {
                "buildTarget": "server:build",
                "host": "0.0.0.0",
                "inspect": false,
                "port": 8080
            }
        },
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "commands": ["npx nx run-migrations server", "npx nx serve server"],
                "envFile": "packages/server/.env",
                "parallel": false
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{options.coverageDirectory}"],
            "options": {
                "codeCoverage": true,
                "colors": true,
                "coverageReporters": ["html", "text-summary"],
                "coverageDirectory": "coverage/server",
                "jestConfig": "packages/server/jest.config.ts",
                "onlyChanged": false,
                "passWithNoTests": true,
                "testPathIgnorePatterns": ["./src/test.ts"],
                "watch": false,
                "watchAll": false
            },
            "configurations": {
                "ci": {
                    "ci": true
                },
                "dev": {
                    "watchAll": true
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/server/**/*.ts"]
            }
        }
    }
}
