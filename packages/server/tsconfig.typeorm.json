{
    "extends": "./tsconfig.json",
    "include": ["typeorm/**/*.ts"],
    "exclude": ["jest.config.ts", "src/**/*.ts", "src/test.ts", "testing/**/*.ts"],
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "module": "ES2022",
        "moduleResolution": "Node",
        "outDir": "../../dist/out-tsc",
        "target": "ES2022",
        "types": ["node"],
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true
    }
}
