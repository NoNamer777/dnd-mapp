{
    "name": "client",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "packages/client/src",
    "tags": ["@dnd-mapp/client"],
    "implicitDependencies": ["data", "shared-components"],
    "prefix": "dma",
    "targets": {
        "build-dev": {
            "executor": "@nx/angular:delegate-build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "buildTarget": "client:build:dev",
                "outputPath": "dist/client",
                "tsConfig": "packages/client/tsconfig.app.json",
                "watch": true
            }
        },
        "build": {
            "executor": "@angular-devkit/build-angular:browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "assets": ["packages/client/src/favicon.ico", "packages/client/src/assets"],
                "baseHref": "/app/",
                "budgets": [
                    {
                        "type": "initial",
                        "maximumWarning": "5mb",
                        "maximumError": "10mb"
                    },
                    {
                        "type": "anyComponentStyle",
                        "maximumWarning": "2kb",
                        "maximumError": "4kb"
                    }
                ],
                "index": "packages/client/src/index.html",
                "inlineStyleLanguage": "scss",
                "main": "packages/client/src/main.ts",
                "optimization": true,
                "outputHashing": "all",
                "outputPath": "dist/client",
                "polyfills": ["zone.js"],
                "scripts": [
                    "node_modules/@popperjs/core/dist/umd/popper.min.js",
                    "node_modules/bootstrap/dist/js/bootstrap.min.js"
                ],
                "sourceMap": false,
                "styles": ["packages/client/src/styles.scss", "node_modules/bootstrap/dist/css/bootstrap.min.css"],
                "tsConfig": "packages/client/tsconfig.app.json",
                "vendorChunk": true,
                "watch": false
            },
            "defaultConfiguration": "ci",
            "configurations": {
                "dev": {
                    "namedChunks": true,
                    "outputHashing": "none",
                    "optimization": false,
                    "sourceMap": true,
                    "fileReplacements": [
                        {
                            "replace": "packages/client/src/environments/environment.ts",
                            "with": "packages/client/src/environments/environment.dev.ts"
                        }
                    ]
                },
                "ci": {
                    "outputHashing": "none",
                    "fileReplacements": [
                        {
                            "replace": "packages/client/src/environments/environment.ts",
                            "with": "packages/client/src/environments/environment.ci.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "@angular-devkit/build-angular:dev-server",
            "options": {
                "browserTarget": "client:build:dev",
                "host": "0.0.0.0",
                "open": false,
                "port": 4200,
                "watch": true
            }
        },
        "test": {
            "executor": "@angular-devkit/build-angular:karma",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "assets": ["packages/client/src/assets", "packages/client/src/favicon.ico"],
                "codeCoverage": true,
                "codeCoverageExclude": ["**/testing/**", "**/*.module.ts", "**/index.ts", "**/environments/**"],
                "inlineStyleLanguage": "scss",
                "karmaConfig": "packages/client/karma.conf.js",
                "polyfills": ["zone.js", "zone.js/testing"],
                "scripts": [
                    "node_modules/@popperjs/core/dist/umd/popper.min.js",
                    "node_modules/bootstrap/dist/js/bootstrap.min.js"
                ],
                "styles": ["packages/client/src/styles.scss", "node_modules/bootstrap/dist/css/bootstrap.min.css"],
                "tsConfig": "packages/client/tsconfig.spec.json",
                "watch": false
            },
            "configurations": {
                "dev": {
                    "progress": true,
                    "sourceMap": true,
                    "watch": true
                },
                "ci": {
                    "progress": false,
                    "sourceMap": false
                }
            }
        },
        "docker-build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker build -f packages/client/Dockerfile . -t nonamer777/dnd-mapp-client"
            }
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "browserTarget": "client:build",
                "format": "json",
                "outputPath": "dist/client/translations"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["packages/client/**/*.ts", "packages/client/**/*.html"]
            }
        }
    }
}
