{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "client",
    "projectType": "application",
    "sourceRoot": "packages/client/src",
    "tags": ["@dnd-mapp/client"],
    "implicitDependencies": ["data"],
    "prefix": "dma",
    "targets": {
        "build": {
            "executor": "@angular-devkit/build-angular:browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "assets": ["packages/client/src/favicon.ico", "packages/client/src/assets"],
                "baseHref": "/",
                "budgets": [
                    {
                        "type": "initial",
                        "maximumWarning": "500kb",
                        "maximumError": "1mb"
                    },
                    {
                        "type": "anyComponentStyle",
                        "maximumWarning": "2kb",
                        "maximumError": "4kb"
                    }
                ],
                "index": "packages/client/src/index.html",
                "inlineStyleLanguage": "scss",
                "main": "packages/client/src/main.ts",
                "optimization": true,
                "outputHashing": "all",
                "outputPath": "dist/client",
                "polyfills": ["zone.js"],
                "scripts": [],
                "sourceMap": false,
                "styles": ["packages/client/src/styles.scss"],
                "tsConfig": "packages/client/tsconfig.app.json",
                "watch": false
            },
            "configurations": {
                "dev": {
                    "namedChunks": true,
                    "outputHashing": "none",
                    "optimization": {
                        "scripts": true,
                        "styles": false
                    },
                    "sourceMap": true,
                    "vendorChunk": true
                },
                "ci": {
                    "outputHashing": "none"
                }
            }
        },
        "serve": {
            "executor": "@angular-devkit/build-angular:dev-server",
            "options": {
                "browserTarget": "client:build:dev",
                "host": "localhost",
                "open": false,
                "port": 4200,
                "watch": true
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{options.coverageDirectory}"],
            "options": {
                "codeCoverage": true,
                "colors": true,
                "coverageReporters": ["html", "text-summary"],
                "coverageDirectory": "coverage/packages/client",
                "jestConfig": "packages/client/jest.config.ts",
                "onlyChanged": false,
                "passWithNoTests": true,
                "watch": false,
                "watchAll": false
            },
            "configurations": {
                "dev": {
                    "watchAll": true
                },
                "ci": {
                    "ci": true
                }
            }
        },
        "docker-build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker build -f packages/client/Dockerfile . -t nonamer777/dnd-mapp-client"
            }
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "browserTarget": "client:build",
                "format": "json",
                "outputPath": "dist/client/translations"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/client/**/*.ts", "packages/client/**/*.html"]
            }
        }
    }
}
