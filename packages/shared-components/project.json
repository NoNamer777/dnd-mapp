{
    "name": "shared-components",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/shared-components/src",
    "prefix": "dma",
    "tags": ["@dnd-mapp/shared-components"],
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/angular:ng-packagr-lite",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "packages/shared-components/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "packages/shared-components/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "packages/shared-components/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "build-storybook": {
            "executor": "@storybook/angular:build-storybook",
            "outputs": ["{options.outputDir}"],
            "options": {
                "assets": [],
                "browserTarget": "shared-components:build-storybook",
                "compodoc": false,
                "configDir": "packages/shared-components/.storybook",
                "outputDir": "dist/storybook/shared-components",
                "styles": []
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "storybook": {
            "executor": "@storybook/angular:start-storybook",
            "options": {
                "browserTarget": "shared-components:build-storybook",
                "compodoc": false,
                "configDir": "packages/shared-components/.storybook",
                "host": "0.0.0.0",
                "open": false,
                "port": 4300
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "static-storybook": {
            "executor": "@nx/web:file-server",
            "options": {
                "brotli": true,
                "buildTarget": "shared-components:build-storybook",
                "host": "0.0.0.0",
                "port": 4301,
                "spa": true,
                "staticFilePath": "dist/storybook/shared-components"
            },
            "configurations": {
                "ci": {
                    "buildTarget": "shared-components:build-storybook:ci"
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/shared-components/**/*.ts", "packages/shared-components/**/*.html"]
            }
        }
    }
}
