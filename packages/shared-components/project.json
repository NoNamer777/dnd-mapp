{
    "name": "shared-components",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/shared-components/src",
    "prefix": "dma",
    "tags": ["@dnd-mapp/shared-components"],
    "implicitDependencies": ["data"],
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/angular:ng-packagr-lite",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "packages/shared-components/ng-package.json"
            },
            "defaultConfiguration": "prod",
            "configurations": {
                "prod": {
                    "tsConfig": "packages/shared-components/tsconfig.lib.prod.json"
                },
                "dev": {
                    "tsConfig": "packages/shared-components/tsconfig.lib.json",
                    "watch": true
                }
            }
        },
        "test": {
            "executor": "@angular-devkit/build-angular:karma",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "assets": [],
                "codeCoverage": true,
                "codeCoverageExclude": ["**/testing/**/*", "**/*.module.ts", "**/index.ts"],
                "inlineStyleLanguage": "scss",
                "karmaConfig": "packages/shared-components/karma.conf.js",
                "polyfills": ["zone.js", "zone.js/testing"],
                "scripts": [],
                "styles": [
                    "packages/shared-components/src/lib/styling/theme-variables.scss",
                    "packages/shared-components/src/lib/styling/font.scss"
                ],
                "tsConfig": "packages/shared-components/tsconfig.spec.json",
                "watch": false
            },
            "defaultConfiguration": "ci",
            "configurations": {
                "dev": {
                    "progress": true,
                    "sourceMap": true,
                    "watch": true
                },
                "ci": {
                    "progress": true,
                    "sourceMap": false
                }
            }
        },
        "build-storybook": {
            "executor": "@storybook/angular:build-storybook",
            "outputs": ["{options.outputDir}"],
            "options": {
                "assets": [],
                "browserTarget": "shared-components:build-storybook",
                "compodoc": false,
                "configDir": "packages/shared-components/.storybook",
                "outputDir": "dist/storybook/shared-components",
                "styles": ["packages/shared-components/.storybook/styling.scss"]
            }
        },
        "storybook": {
            "executor": "@storybook/angular:start-storybook",
            "options": {
                "browserTarget": "shared-components:build-storybook",
                "compodoc": false,
                "configDir": "packages/shared-components/.storybook",
                "host": "0.0.0.0",
                "open": false,
                "port": 4300
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        }
    }
}
