{
    "root": true,
    "ignorePatterns": ["**/*"],
    "plugins": ["@nx"],
    "overrides": [
        {
            "files": ["*.ts", "*.js"],
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "allow": [],
                        "enforceBuildableLibDependency": true,
                        "allowCircularSelfDependency": true,
                        "depConstraints": [
                            {
                                "sourceTag": "@dnd-mapp/client",
                                "onlyDependOnLibsWithTags": ["@dnd-mapp/client", "@dnd-mapp/data"],
                                "bannedExternalImports": [
                                    "@nestjs/*",
                                    "typeorm",
                                    "sqlite3",
                                    "mysql2",
                                    "class-validator",
                                    "class-transformer",
                                    "axios",
                                    "reflect-metadata",
                                    "js-yaml",
                                    "@storybook/*"
                                ]
                            },
                            {
                                "sourceTag": "@dnd-mapp/shared-components",
                                "onlyDependOnLibsWithTags": ["@dnd-mapp/client", "@dnd-mapp/data"],
                                "bannedExternalImports": [
                                    "@nestjs/*",
                                    "typeorm",
                                    "sqlite3",
                                    "mysql2",
                                    "class-validator",
                                    "class-transformer",
                                    "axios",
                                    "reflect-metadata",
                                    "js-yaml",
                                    "@fortawesome/*"
                                ]
                            },
                            {
                                "sourceTag": "@dnd-mapp/server",
                                "onlyDependOnLibsWithTags": ["@dnd-mapp/server", "@dnd-mapp/data"],
                                "bannedExternalImports": [
                                    "@angular/*",
                                    "zone.js",
                                    "@fortawesome/*",
                                    "@storybook/*",
                                    "@fortawesome/*"
                                ]
                            },
                            {
                                "sourceTag": "@dnd-mapp/data",
                                "bannedExternalImports": ["*"]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "files": ["*.ts"],
            "extends": ["plugin:@nx/typescript"],
            "rules": {}
        },
        {
            "files": ["*.js"],
            "extends": ["plugin:@nx/javascript"],
            "rules": {}
        },
        {
            "files": ["*.spec.ts"],
            "env": {
                "jest": true
            },
            "rules": {}
        }
    ]
}
